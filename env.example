# LinkedIn Post Automation Environment Variables

# LinkedIn API Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# OpenAI API (for enhanced content generation)
OPENAI_API_KEY=your_openai_api_key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/linkedin_automation.log

# Scheduling Configuration
TIMEZONE=UTC
MAX_POSTS_PER_DAY=3
MIN_INTERVAL_HOURS=4

# Content Processing
MAX_POST_LENGTH=1300
MIN_POST_LENGTH=100
MAX_HASHTAGS=5

# Newsletter Sources (optional overrides)
DEEPLEARNING_AI_BATCH_URL=https://www.deeplearning.ai/the-batch/
DEEPLEARNING_AI_DATA_POINTS_URL=https://www.deeplearning.ai/data-points/
